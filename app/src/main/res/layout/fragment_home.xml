<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ImageView
      android:layout_width="150dp"
      android:layout_height="50dp"
      android:src="@drawable/emma_tel"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      >
    <View
        android:layout_width="40dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorPrimary">

    </View>
    <View
        android:layout_width="7dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorPrimary4">
    </View>
    <View
        android:layout_width="5dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorPrimary3">
    </View>
    <View
        android:layout_width="5dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorPrimary2">
    </View>
    <View
        android:layout_width="1dp"
        android:layout_height="11dp"
        android:layout_marginEnd="1dp"
        android:background="@color/colorPrimary1">
    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Home"
        android:textSize="16dp"
        android:paddingStart="10dp"
        android:textColor="@color/colorAccent"
        />

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler_main_slider"
      android:layout_width="match_parent"
      android:visibility="visible"
      android:layout_height="200dp"
      android:orientation="horizontal"
      />

      <com.allattentionhere.autoplayvideos.AAH_CustomRecyclerView
          android:id="@+id/rv_home"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />



      <LinearLayout
          android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="2"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <LinearLayout
          android:clickable="true"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:weightSum="5"
          android:id="@+id/linearLayout_offers"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="9dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Offers"
              android:textSize="10pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/offers_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>

      <LinearLayout
          android:clickable="true"
          android:layout_width="match_parent"
          android:layout_height="60dp"

          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:id="@+id/linearLayout_mobiles"
          android:weightSum="5"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="9dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Mobiles"
              android:textSize="10pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/mobiles_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>

      <LinearLayout
          android:id="@+id/linearLayout_contact"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:clickable="true"
          android:weightSum="5"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Contact_us"
              android:textSize="9pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/contact_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:clickable="true"
          android:id="@+id/linearLayout_accessory"
          android:weightSum="5"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Accessories"
              android:textSize="9pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/accessory_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:weightSum="5"
          android:id="@+id/linearLayout_branches"
          android:clickable="true"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/Branches"
              android:textSize="9pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/branches_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:clickable="true"
          android:weightSum="5"
          android:id="@+id/linearLayout_about"
          android:background="@drawable/border_raduis">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="10dp">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/about_us"
              android:textSize="9pt"
              android:textColor="@color/ms_white"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="bottom">
          <ImageView
              android:layout_height="40dp"
              android:layout_margin="5dp"
              android:src="@drawable/about_home"
              android:layout_width="40dp"
              android:tint="@color/colorPrimary"/>
        </LinearLayout>



      </LinearLayout>
    </LinearLayout>



  </LinearLayout>




    </LinearLayout>


</LinearLayout>


</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>